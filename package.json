{
  "name": "api-snapshot-testing-poc",
  "version": "1.0.0",
  "description": "PoC demonstrating API snapshot testing with Jest to detect response structure changes",
  "main": "dist/server.js",
  "scripts": {
    "snapshot:create": "ts-node scripts/capture-snapshots.ts",
    "snapshot:verify": "jest",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:update": "jest --updateSnapshot",
    "test:verbose": "jest --verbose"
  },
  "keywords": [
    "snapshot-testing",
    "api-testing",
    "jest",
    "express",
    "poc"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.5",
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "diff": "^5.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jest-diff": "^29.7.0",
    "jest-snapshot": "^29.7.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/diff": "^5.0.9",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.6",
    "jest": "^29.7.0",
    "jest-specific-snapshot": "^8.0.0",
    "pretty-format": "^29.7.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
