{
  "name": "api-snapshot-testing-poc",
  "version": "1.0.0",
  "description": "PoC demonstrating API snapshot testing with Jest to detect response structure changes",
  "main": "dist/server.js",
  "scripts": {
    "test:before": "ts-node scripts/capture-responses.ts before",
    "test:after": "ts-node scripts/capture-responses.ts after && ts-node scripts/compare-responses.ts",
    "compare": "ts-node scripts/compare-responses.ts"
  },
  "keywords": [
    "snapshot-testing",
    "api-testing",
    "jest",
    "express",
    "poc"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "axios": "^1.6.5",
    "diff": "^5.1.0",
    "chalk": "^4.1.2",
    "dotenv": "^16.3.1",
    "jest-snapshot": "^29.7.0",
    "jest-diff": "^29.7.0",
    "pretty-format": "^29.7.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/diff": "^5.0.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
